<!DOCTYPE html>
<html>
  <head>
    <title>SecuritySample Admin</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootswatch/3.3.7/cerulean/bootstrap.min.css' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to "Security sample admin", root_path, class: "navbar-brand" %>
        </div>

        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-left">
            <li><%= link_to "Redirection logs", redirection_logs_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_administrator.name %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Log out", session_path, method: :delete %></li>
              </ul>
            </li>
            <% else %>
              <li><%= link_to "Log in", new_session_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% if flash[:notice]%>
        <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:warn]%>
        <div class="alert alert-warning" role="alert"><%= flash[:warn] %></div>
      <% end %>
      <% if flash[:danger]%>
        <div class="alert alert-danger" role="alert"><%= flash[:danger] %></div>
      <% end %>
    </div>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
